---
import Layout from '../layouts/Layout.astro'
import { Button } from '@/components/ui/button'

// Define the available games
const games = [
    {
        name: 'Agujaceratops',
        image: '/Aguja.png',
        dataFile: '/data/Agujaceratops.json',
        description: 'Experience a day in the life of an Agujaceratops',
    },
    {
        name: 'Kritosaurus',
        image: '/Krito.png',
        dataFile: '/data/Kritosaurus.json',
        description: 'Experience a day in the life of a Kritosaurus',
    },
    {
        name: 'Mosasaurus',
        image: '/Mosa.png',
        dataFile: '/data/Mosasaurus.json',
        description: 'Experience a day in the life of a Mosasaurus',
    },
    {
        name: 'Protohadros',
        image: '/protos.png',
        dataFile: '/data/Protes.json',
        description: 'Experience a day in the life of a Protohadros',
    },
    {
        name: 'Tyrannosaurus',
        image: '/Tyranno.png',
        dataFile: '/data/Tyrannosaurus.json',
        description: 'Experience a day in the life of a Tyrannosaurus',
    },
]
---

<Layout title="A Day in the Life Game">
    <div class="container mx-auto max-w-4xl p-8 text-center">
        <div class="mb-10">
            <h1
                class="text-5xl font-bold mb-4 text-green-600 animate-pulse-slow"
            >
                A Day in the Life
            </h1>
            <div class="h-1 w-32 bg-green-500 mx-auto rounded-full mb-4"></div>
            <p class="text-xl mb-2 text-gray-700">
                Choose a dinosaur to experience their day.
            </p>
            <p class="text-lg mb-8 text-gray-600">
                Make choices and see how they affect your journey!
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                games.map((game, index) => (
                    <a
                        href={`/${game.name.toLowerCase()}`}
                        class="group animate-fade-in"
                        style={`animation-delay: ${index * 100}ms`}
                    >
                        <div class="relative overflow-hidden bg-white shadow-lg rounded-lg border-2 border-transparent transition-all hover:border-green-500 hover:scale-105 duration-300 h-full flex flex-col">
                            <div class="absolute top-0 right-0 bg-green-600 text-white py-1 px-3 rounded-bl-lg z-10 text-sm font-medium">
                                {game.name}
                            </div>
                            <div class="aspect-square overflow-hidden p-10">
                                <img
                                    src={game.image}
                                    alt={game.name}
                                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                />
                            </div>
                            <div class="p-4 bg-gradient-to-r from-green-50 to-blue-50 flex-1 flex flex-col">
                                <h3 class="text-xl font-bold mb-2 text-green-700">
                                    {game.name}
                                </h3>
                                <p class="text-sm text-gray-600 flex-1 mb-3">
                                    {game.description}
                                </p>
                                <Button
                                    client:visible
                                    variant="default"
                                    className="w-full py-2 bg-green-600 hover:bg-green-700 group-hover:animate-pulse"
                                >
                                    <span class="flex items-center justify-center gap-2">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="16"
                                            height="16"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        >
                                            <polygon points="5 3 19 12 5 21 5 3" />
                                        </svg>
                                        Play Now
                                    </span>
                                </Button>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        <footer
            class="mt-16 border-t border-gray-200 pt-8 pb-4 text-center text-sm text-gray-500"
        >
            <p>Choose your dinosaur and start your adventure!</p>
            <p class="mt-2">
                &copy; {new Date().getFullYear()} A Day in the Life Game
            </p>
        </footer>
    </div>
</Layout>
